<odoo>
    <record id="real_estate_tree_view" model="ir.ui.view">
        <field name="name">real.estate.tree</field>
        <field name="model">real.estate</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="type_id" />
            </tree>
        </field>
    </record>
    <record id="real_estate_form_view" model="ir.ui.view">
        <field name="name">real.estate.form</field>
        <field name="model">real.estate</field>
        <field name="arch" type="xml">
            <form string="RealEstate Entity">
                <header>

                </header>
                <sheet>
                    <div class="oe_button_box" name="buttons" />
                    <field name="active" invisible="1" />
                    <widget
                        name="web_ribbon"
                        title="Archived"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}"
                    />
                    <field
                        name="image"
                        widget='image'
                        class="oe_avatar"
                        options='{"preview_image": "image_128"}'
                    />
                    <div class="oe_title" name="title">
                        <label for="name" string="Shipping Method" />
                        <h1>
                            <field name="name" placeholder="e.g. 0001 Apartment" />
                        </h1>
                    </div>
                    <notebook>
                        <page name="page_general_info" string="General Information">
                            <group>
                                <group name="general_first">
                                    <field name="type_id" />
                                    <field name="ref" />
                                </group>
                                <group name="general_second">
                                    <field name="company_id" readonly="1" />
                                    <field name="short_description" />
                                    <field name="description" />
                                </group>
                            </group>
                            <group name="group_contact_info">
                                <group name="group_contact_left">
                                </group>
                                <group
                                    name="group_contact_right"
                                    string="Contact Information"
                                >
                                    <field name="owner_ids" widget="many2many_tags" />

                                </group>
                            </group>
                            <group name="main_data">
                                <group name="left" />
                                <group name="right" />
                            </group>
                        </page>
                        <page name="page_location" string="Location">
                            <group>
                                <group name="group_location_left">
                                    <label for="street" string="Address" />
                                    <div class="o_address_format">
                                        <div class="oe_edit_only">

                                        </div>
                                        <field
                                            name="street"
                                            placeholder="Street..."
                                            class="o_address_street"
                                        />
                                        <field
                                            name="street2"
                                            placeholder="Street 2..."
                                            class="o_address_street"
                                        />
                                        <field
                                            name="city"
                                            placeholder="City"
                                            class="o_address_city"
                                        />
                                        <field
                                            name="state_id"
                                            class="o_address_state"
                                            placeholder="State"
                                            options='{"no_open": True}'
                                            context="{'country_id': country_id, 'zip': zip}"
                                            domain="[('country_id', '=', country_id)]"
                                        />
                                        <field
                                            name="zip"
                                            placeholder="ZIP"
                                            class="o_address_zip"
                                        />
                                        <field
                                            name="country_id"
                                            placeholder="Country"
                                            class="o_address_country"
                                            options='{"no_open": True, "no_create": True}'
                                        />
                                    </div>
                                </group>
                                <group name="group_location_right" />
                            </group>
                        </page>
                        <page name="page_contacts" string="Contacts &amp; Addresses">

                        </page>
                        <page name='page_internal_notes' string="ID &amp; Notes">
                            <field name="comment" placeholder="Internal Note..." />
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>
    <record id="real_estate_view_kanban" model="ir.ui.view">
        <field name="name">real.estate.kanban</field>
        <field name="model">real.estate</field>
        <field name="type">kanban</field>
        <field name="arch" type="xml">
            <kanban class="o_res_partner_kanban" string="Estates">
                <field name="street" />
                <field name="street2" />
                <field name="zip" />
                <field name="city" />
                <field name="country_id" />
                <field name="state_id" />
                <field name="image" />
                <field name="type_id" />
                <templates>
                    <t t-name="kanban-box">
                        <div
                            class="oe_kanban_global_click o_kanban_record_has_image_fill o_res_partner_kanban"
                        >
                            <field
                                name="image"
                                widget="image"
                                class="o_kanban_image_fill_left"
                                options="{'zoom': true, 'zoom_delay': 1000, 'background': true, 'preventClicks': false}"
                            />
                            <div class="oe_kanban_details">
                                <strong class="oe_partner_heading">
                                    <field name="name" />
                                </strong>
                                <ul name="entity_details">
                                    <li
                                        t-if="record.zip.raw_value"
                                        class="o_text_overflow"
                                    >
                                        <field name="zip" />
                                    </li>
                                    <li
                                        t-if="record.city.raw_value"
                                        class="o_text_overflow"
                                    >
                                        <field name="city" />
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="real_estate_search_view" model="ir.ui.view">
        <field name="name">real.estate.search</field>
        <field name="model">real.estate</field>
        <field name="arch" type="xml">
            <search string="RealEstate Entities">
                <field name="name" />
                <group expand="0" string="Group By...">
                    <filter
                        string="Type"
                        name="type"
                        domain="[]"
                        context="{'group_by':'type_id'}"
                    />
                </group>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="real_estate_act_window">
        <field name="name">Real Estate</field>
        <field name="res_model">real.estate</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="search_view_id" ref="real_estate_search_view" />
        <field
            name="view_ids"
            eval="[(5, 0, 0),
                          (0, 0, {'view_mode': 'kanban', 'view_id': ref('real_estate_view_kanban')}),
                          (0, 0, {'view_mode': 'tree', 'view_id': ref('real_estate_tree_view')}),
                          (0, 0, {'view_mode': 'form', 'view_id': ref('real_estate_form_view')}),
                         ]"
        />
    </record>

    <record model="ir.ui.menu" id="real_estate_menu">
        <field name="name">Estates</field>
        <field name="parent_id" ref="real_estate.menu_real_estate" />
        <field name="action" ref="real_estate_act_window" />
        <field name="sequence" eval="10" />
    </record>

</odoo>
